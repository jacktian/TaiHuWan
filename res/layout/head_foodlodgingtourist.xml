<?xml version="1.0" encoding="utf-8"?>
<RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/radio"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/top_img"
    android:gravity="center"
    android:orientation="horizontal" >

    <RadioButton
        android:id="@+id/btn_food"
        style="@style/tab_button"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:background="@drawable/btnbg_food"
        android:checked="true"
        android:textColor="@color/titlebtn_gray"
        android:textSize="16sp" />

    <RadioButton
        android:id="@+id/btn_lodging"
        style="@style/tab_button"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:background="@drawable/btnbg_lodging"
        android:checked="false"
        android:textColor="@color/titlebtn_gray"
        android:textSize="16sp" />

    <RadioButton
        android:id="@+id/btn_tourist"
        style="@style/tab_button"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:background="@drawable/btnbg_tourist"
        android:checked="false"
        android:textColor="@color/titlebtn_gray"
        android:textSize="16sp" />

</RadioGroup>