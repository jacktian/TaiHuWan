<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="fill_parent"
	android:layout_height="wrap_content" android:gravity="center"
	android:background="@drawable/top_img">
	<Button android:id="@+id/titlebar_back" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:background="@drawable/btnbg_back"
		android:textColor="@color/white" android:textSize="16sp" 
		android:layout_marginLeft="10dip"  />
	<LinearLayout android:id="@+id/titlebar_point"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:layout_weight="1" android:gravity="center" >
		<TextView android:id="@+id/titlebar_name"  
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:layout_gravity="right" android:textColor="@color/white" 
			android:textSize="20.0sp" android:singleLine="true" />
	</LinearLayout>
	<Button android:id="@+id/titlebar_drive" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:background="@drawable/titlebtn_bg" 
		android:textColor="@color/black"  android:textSize="16sp" android:text="驾车"/>
	<Button android:id="@+id/titlebar_bus" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:background="@drawable/titlebtn_bg"
		android:textColor="@color/black" android:textSize="16sp" android:text="公交"/>
	<Button android:id="@+id/titlebar_walk" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:background="@drawable/titlebtn_bg"
		android:textColor="@color/black" android:textSize="16sp" 
		android:layout_marginRight="10dip"  android:text="步行"
		/>
</LinearLayout>
